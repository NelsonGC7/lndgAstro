---
import Texto from "./Texto.astro";
import Figure from "./Figure.astro";

---

<main class=" custom-fondos flex flex-col  items-center justify-end 
px-10 z-0 lg:justify-center  lg:items-start  lg:px-24
">
    <Texto 
        stylos="flex flex-col items-center gap-6 lg:w-1/2 lg:items-start lg:text-start"
        stylosO=" text-center flex flex-col items-center gap-6  lg:items-start lg:text-start"
        title="Next generation digital bank"
        description="Take your financial life online. Your Easybank account will be a one-stop-shop for spending, saving, budgeting, investing, and much more."
    >
    <Figure>
        <button 
            class="bg-slate-500 h-12 w-[11rem] px-4 rounded-3xl
            customBtn text-white font-bold">Request invited</button>
    </Figure>
    </Texto>

</main>



<style is:global>
    .custom-fondos{
        background: url('/images/image-mockups.png') center no-repeat,
                    url('/images/bg-intro-mobile.svg') top no-repeat
                    var(--VeryLightGray);
        background-size: contain, 100% 62%;
        background-position: 0 -8rem,top;
        height: 44rem;
        width: 100%;
        margin:  0 auto;
        padding-bottom: 4rem;
    }
    .customStyles{
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        

    }
    @media(width >= 1024px){
        .custom-fondos{
            background: url('/images/image-mockups.png') right no-repeat,
                    url('/images/bg-intro-desktop.svg') right no-repeat
                    var(--VeryLightGray);
            background-size: contain, 75% 100%;
            background-position: 135% 0,200% 0;
        }
        
    }
    @media(width >= 1110px){
        .custom-fondos{
            background: url('/images/image-mockups.png') right no-repeat,
                    url('/images/bg-intro-desktop.svg') right no-repeat
                    var(--VeryLightGray);
            background-size: contain, 75% 100%;
            background-position: 114% 0,200% 0;
        }
        
    }


</style>